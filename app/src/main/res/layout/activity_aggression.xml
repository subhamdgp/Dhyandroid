<?ml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Aggression">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="% AGGRESSION CALCULATOR"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/instruction"
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Press The Start Button And Read The Quote"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@id/heading"
        />
   <TextView
       android:id="@+id/quote"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Do not dwell in the past, do not dream of the future, concentrate the mind on the present moment."
       android:layout_centerInParent="true"
       android:textColor="#000"
       android:textSize="25dp"
       android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-BUDDHA"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/quote"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="Start" />

    <TextView
        android:id="@+id/peragg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage Aggression =0.0"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>